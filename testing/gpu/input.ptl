#define numPoints 16
GlobalSettings
{
	Display
	{
		debugLevel = 4
		trackOutputOrigins = false
		colorOutput = true
	}
	Memory
	{
		allowStackAllocation = false
	}
}
Domain
{
	blockDim = [5, 5, 1]
	blockBounds = [0, 2, 0, 2, 0, 0.5]
	meshDataDim = [$(numPoints), $(numPoints), $(numPoints)]
	refinementConstraintType = factor2CompletelyConstrained
	periodicRefinement = [true, true, true]
	Exchanges
	{
		exchangeDim = [3, 3, 3]
		interpolationOrder = 2
	}
	Partition
	{
		partitionType = @choose(1, singleGPU, uniform)
	}
}