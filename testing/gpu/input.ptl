#define numPoints 16
GlobalSettings
{
	Display
	{
		debugLevel = 3
		trackOutputOrigins = false
		colorOutput = false
	}
	Memory
	{
		allowStackAllocation = false
	}
}
Domain
{
	blockDim = [5, 5]
	blockBounds = [0, 2, 0, 2]
	meshDataDim = [$(numPoints), $(numPoints)]
	refinementConstraintType = factor2CompletelyConstrained
	periodicRefinement = [true, true]
	Exchanges
	{
		exchangeDim = [3, 3]
		interpolationOrder = 2
	}
	Partition
	{
		partitionType = singleGPU
	}
}